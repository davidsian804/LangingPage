@model HomeIndexViewModel

@if (Model.Proyectos is not null)
{
    <!-- portfolio section -->
    <section class="section" id="portfolio">
        <div class="container text-center">
            <p class="section-subtitle">Mis Proyectos ?</p> 
            <h6 class="section-title mb-6">Portfolio</h6>
           
            <!-- row -->
            <div class="row">
                <div class="row row-cols-1 row-cols-md-3 g4">

                    @foreach (var Proyectos in Model.Proyectos)
                    {  
                        <a href="@Proyectos.Link" target="_blank" rel="noopener noreferrer" class="portfolio-card">
                            <img src="@Proyectos.ImagenURL" class="portfolio-card-img"
                             alt="img portafolio">
                            <span class="portfolio-card-overlay">
                                <span class="portfolio-card-caption">
                                    <h4>@Proyectos.Titulo</h4>
                                    <p class="font-weight-normal">@Proyectos.Descripcion</p>
                                </span>
                            </span>
                        </a>
                    }
                    
                </div>

                <div class="form-group col-sm-12 mt-5">
                    <a class="btn btn-primary rounded" asp-controller="Home" asp-action="Proyectos" role="button">Ver Proyectos</a>
                </div>
               
            </div><!-- end of row -->
        </div><!-- end of container -->
    </section> <!-- end of portfolio section -->
}

