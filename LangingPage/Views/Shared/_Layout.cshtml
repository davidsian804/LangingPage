    <!-- Page Navbar -->
    <nav class="custom-navbar" data-spy="affix" data-offset-top="20">
        <div class="container">
            <a class="logo" href="#">Portafolio</a>
            <ul class="nav">
                <li class="item">
                    <a class="link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                </li>
                <li class="item">
                    <a class="link" href="#about">Acerca</a>
                </li>
                <li class="item">
                    <a class="link" href="#portfolio">Portafolio</a>
                </li>
                <li class="item">
                    <a class="link" href="#testmonial">Testmonial</a>
                </li>
                <li class="item">
                    <a class="link" href="#blog">Blog</a>
                </li>
                <li class="item">
